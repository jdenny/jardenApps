<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true" >
        <shape>
            <solid
                android:color="@color/lightGrey" />
            <stroke
                android:width="2dp"
                android:color="@color/darkGrey" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="2dp"
                android:right="5dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <solid
                android:color="@color/darkGrey" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="2dp"
                android:right="5dp"
                android:bottom="2dp" />
        </shape>
    </item> 

</selector>
